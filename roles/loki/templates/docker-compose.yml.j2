---
networks:
  loki:

services:
  loki:
    image: grafana/loki:latest
    restart: unless-stopped
    command: "-config.file=/etc/loki/config.yaml"
    hostname: loki
    ports:
      - "3100:3100"
    volumes:
      - loki-data:/loki
      - /opt/loki/config.yaml:/etc/loki/config.yaml:ro
    networks:
      - loki

volumes:
  loki-data:
    driver: local
